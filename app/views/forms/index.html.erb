<h1>Listing forms</h1>

<table>
  <tr>
    <th>Date issued</th>
    <th>Issued to</th>
    <th>From</th>
    <th>Subject</th>
    <th>Why</th>
    <th>Answer</th>
    <th>Sign by</th>
    <th>Issued by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forms.each do |form| %>
  <tr>
    <td><%= form.date_issued %></td>
    <td><%= form.issued_to %></td>
    <td><%= form.from %></td>
    <td><%= form.subject %></td>
    <td><%= form.why %></td>
    <td><%= form.answer %></td>
    <td><%= form.sign_by %></td>
    <td><%= form.issued_by %></td>
    <td><%= link_to 'Show', form %></td>
    <td><%= link_to 'Edit', edit_form_path(form) %></td>
    <td><%= link_to 'Destroy', form, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

